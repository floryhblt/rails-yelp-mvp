<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.input :phone_number %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>

<br>
<%= link_to 'Back', restaurants_path, class: "btn btn-success"  %> 