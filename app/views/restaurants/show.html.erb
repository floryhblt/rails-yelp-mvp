<h2><%= @restaurant.name %><h2>
<p> <%= @restaurant.category %> Food </p>
<p> Address : <%= @restaurant.address %> </p>

<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
<% end %>
</ul>

<%= link_to "Add new review !", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>

<br>
<%= link_to 'Back', restaurants_path, class: "btn btn-success"  %> 



